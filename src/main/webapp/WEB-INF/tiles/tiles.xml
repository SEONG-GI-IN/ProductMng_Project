<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>

    <definition name=".contents" template="/WEB-INF/views/layouts/defaultLayout.jsp"></definition>

    <!-- main layout -->
    <definition name="/*" extends=".contents">
        <put-attribute name="body" value="/WEB-INF/views/{1}.jsp"></put-attribute>
    </definition>

    <definition name="/test/*" extends=".contents">
        <put-attribute name="body" value="/WEB-INF/views/test/{1}.jsp"></put-attribute>
    </definition>

</tiles-definitions>