<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
    <definition name=".contents" template="/WEB-INF/views/tiles/defaultLayout.jsp">
        <put-attribute name="css" expression="/WEB-INF/views/tiles/css.jsp" />
        <put-attribute name="script" expression="/WEB-INF/views/tiles/script.jsp" />
        <put-attribute name="nav-top" value="/WEB-INF/views/tiles/nav-top.jsp" />
        <put-attribute name="nav-left" value="/WEB-INF/views/tiles/nav-left.jsp"/>
        <put-attribute name="body" value=""/>
    </definition>

    <definition name=".popup" template="/WEB-INF/views/tiles/defaultLayout2.jsp">
        <put-attribute name="css" expression="/WEB-INF/views/tiles/css.jsp" />
        <put-attribute name="script" expression="/WEB-INF/views/tiles/script.jsp" />
        <put-attribute name="body" value=""/>
    </definition>

    <!-- main layout -->
<!--    <definition name="*.tiles" extends=".contents">-->
<!--        <put-attribute name="body" value="/WEB-INF/views/{1}.jsp"></put-attribute>-->
<!--    </definition>-->

    <definition name="*.tiles" extends=".contents">
        <put-attribute name="body" value="/WEB-INF/views/{1}.jsp"></put-attribute>
    </definition>

    <definition name="item/*.tiles" extends=".contents">
        <put-attribute name="body" value="/WEB-INF/views/item/{1}.jsp"></put-attribute>
    </definition>

    <definition name="common/*.tiles" extends=".contents">
        <put-attribute name="body" value="/WEB-INF/views/common/{1}.jsp"></put-attribute>
    </definition>

    <definition name="popup/*.tiles" extends=".popup">
        <put-attribute name="body" value="/WEB-INF/views/popup/{1}.jsp"></put-attribute>
    </definition>

</tiles-definitions>